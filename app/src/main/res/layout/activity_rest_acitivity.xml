<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restAcitivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/bg"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="60dp"
            tools:ignore="MissingConstraints">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
        >

            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg"
                android:text="API 칩 인식"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <Button
                android:id="@+id/check1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="timerStart"
                android:background="@drawable/bg"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >

            <Button
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg"
                android:onClick="timerStart"
                android:text="모션 안정화"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <Button
                android:id="@+id/check2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="timerStart"
                android:background="@drawable/bg"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >

            <Button
                android:id="@+id/button6"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg"
                android:text="CPU 휴식"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <Button
                android:id="@+id/check3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="timerStart"
                android:background="@drawable/bg"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
            <TextView
                android:id="@+id/restTime"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="12dp"
                android:text="TextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/targetTime"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left">
            <Button
                android:id="@+id/button4"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginBottom="28dp"
                android:clickable="false"
                android:onClick="timerFast"
                android:text="1시간 GO"
                android:textSize="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button7"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginBottom="28dp"
                android:clickable="false"
                android:onClick="timerPause"
                android:text="중지"
                android:textSize="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <Button
                android:id="@+id/button8"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginBottom="28dp"
                android:clickable="false"
                android:onClick="timerBack"
                android:text="10초 백"
                android:textSize="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:srcCompat="@drawable/kyonggi2" />
</LinearLayout>